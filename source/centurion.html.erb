<!-- Page Content -->
<div class="container">

        <div class="row">
          <div class="col-md-12">
              <div class="row">
                <h2 align="center">CENTURION</h2>
                <br>
              </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2 col-lg-2 col-md-2">
          </div>

          <% data.centurion.products.each do |p| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                  <%= image_tag "products/centurion/#{p.id}.png" %>
                  <div align="center" valign="center" class="sale-banner">SAVE <%= (((p.retail - p.pay).to_f / p.retail) * 100).ceil %>%</div>
                    <div class="caption">
                        <h4><%= p.title %></h4>
                        <h5><%= link_to p.merchant, p.url %></h5>
                        <p><%= p.description %></p>
                    </div>

                    <div align="right" valign="center" class="pricing-banner"><b>Only R<%= p.pay %> </b><i><strike>Was R<%= p.retail %></strike></i></div>
                    <br>

                    <div class="ratings">
                        <p class="visible-xs" align="right">
                            <a href="https://pos.snapscan.io/qr/SSDeals?&amount=30000&id=Homme_Massage" target="_blank" class="btn btn-primary">Buy with SnapScan</b></a>
                        </p>
                    </div>
                    <div>
                        <%= image_tag "products/centurion/#{p.id}_qr.png", :class => "hidden-xs" %>
                    </div>
                </div>
            </div>
          <% end %>

          <div class="col-sm-2 col-lg-2 col-md-2">
          </div>

        </div> <!-- END ROW -->



    </div>

</div>
